<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="shortcut icon" type="image/x-icon" href="/images/grupoluna.ico">
    <title>Venta</title>
    <link rel="stylesheet" href="/stylesheets/venta.css">
</head>
<body>

    <%- include('../partials/header') %>

    <h1>VENTA</h1>

    <div class="buscador">
        <form method="GET" action="/searchVenta">
            <input type="text" placeholder="¿Qué está buscando?" name="search" > <button type="submit" >Buscar</button>
        </form>
    </div>
    
    <section class="card-container"> 
        <% if(propiedades != undefined){ %>
            <% for (let i = 0; i < propiedades.length; i++){ %>
            <a class="card" href="/propiedad/<%=propiedades[i].id%>">
                <h2><%= propiedades[i].nombre %></</h2>
                <img src="/images/interior1.jpg" alt="">

                <div class="container-info">
                    <div class="info">
                        <img class="icono" src="/images/bed.png" alt="">
                        <p><%=propiedades[i].habitaciones%></p>
                    </div>
                    <div class="info">
                        <img class="icono" src="/images/baño.png" alt="">
                        <p><%=propiedades[i].banos%></p>
                    </div>
                    <div class="info"> 
                        <img class="icono" src="/images/m2.png" alt="">
                        <p><%=propiedades[i].m2%></p>
                    </div>

                </div>

                <!-- <p>
                    <%= propiedades[i].descripcion %>
                </p> -->
                <h3>U$<%= propiedades[i].precio %></h3>                         
            </a>
            <% } %>
        <% } %>
    </section>

    
    <%- include('../partials/footer') %>
    
</body>
</html>